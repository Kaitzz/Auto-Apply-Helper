{
  "manifest_version": 3,
  "name": "Auto-Apply Helper Developer Edition",
  "version": "0.9.7.3",
  "description": "Autofill job applications with one click. AI answers custom questions. Optional auto-submit. Greenhouse-first.",
  
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "tabs"
  ],
  
  "host_permissions": [
    "https://boards.greenhouse.io/*",
    "https://job-boards.greenhouse.io/*",
    "https://*.greenhouse.io/*",
    "https://autofill-ai-proxy.corneliazhang.workers.dev/*"
  ],
  
  "action": {
    "default_title": "Open Job Autofill"
  },
  
  "side_panel": {
    "default_path": "sidepanel/dist/index.html"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://boards.greenhouse.io/*",
        "https://job-boards.greenhouse.io/*",
        "https://*.greenhouse.io/*"
      ],
      "js": ["content/autofill.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
