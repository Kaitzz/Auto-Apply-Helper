{
  "manifest_version": 3,
  "name": "Job Application Autofill",
  "version": "1.0.0",
  "description": "Automatically fill job application forms, with special support for Greenhouse",
  
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "tabs"
  ],
  
  "host_permissions": [
    "https://boards.greenhouse.io/*",
    "https://job-boards.greenhouse.io/*",
    "https://*.greenhouse.io/*",
    "https://jobs.lever.co/*",
    "https://*.myworkday.com/*",
    "https://*.icims.com/*"
  ],
  
  "action": {
    "default_title": "Open Job Autofill"
  },
  
  "side_panel": {
    "default_path": "sidepanel/dist/index.html"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://boards.greenhouse.io/*",
        "https://job-boards.greenhouse.io/*",
        "https://jobs.lever.co/*",
        "https://*.myworkday.com/*"
      ],
      "js": ["content/autofill.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
